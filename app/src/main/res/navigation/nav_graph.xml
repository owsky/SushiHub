<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homepageFragment">

    <fragment
        android:id="@+id/homepageFragment"
        android:name="com.veneto_valley.veneto_valley.HomepageFragment"
        android:label="Home"
        tools:layout="@layout/fragment_homepage">
        <action
            android:id="@+id/action_homepageFragment_to_generaQR"
            app:destination="@id/generaQR" />
        <action
            android:id="@+id/action_homepageFragment_to_scanQR"
            app:destination="@id/scanQR" />
        <action
            android:id="@+id/action_homepageFragment_to_nearbyTest"
            app:destination="@id/nearbyTest" />
        <action
            android:id="@+id/action_homepageFragment_to_extra"
            app:destination="@id/extra" />
    </fragment>
    <fragment
        android:id="@+id/generaQR"
        android:name="com.veneto_valley.veneto_valley.GeneraQRFragment"
        android:label="Crea tavolo"
        tools:layout="@layout/fragment_genera_qr">
        <argument
            android:name="codice_tavolo"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true" />
        <action
            android:id="@+id/action_generaQR_to_impostaTavolo"
            app:destination="@id/impostaTavolo" />
    </fragment>
    <fragment
        android:id="@+id/scanQR"
        android:name="com.veneto_valley.veneto_valley.ScanQRFragment"
        android:label="Unisciti a un tavolo"
        tools:layout="@layout/fragment_scan_qr">
        <action
            android:id="@+id/action_scanQR_to_listPiattiFragment"
            app:destination="@id/listaPiattiFragment"
            app:popUpTo="@id/listaPiattiFragment" />
    </fragment>
    <fragment
        android:id="@+id/listaPiattiFragment"
        android:name="com.veneto_valley.veneto_valley.ListPiattiFragment"
        android:label="Tavolo"
        tools:layout="@layout/fragment_list_piatti">
        <action
            android:id="@+id/action_listPiattiFragment_to_aggiungiOrdiniFragment"
            app:destination="@id/aggiungiOrdiniFragment" />
        <action
            android:id="@+id/action_listaPiattiFragment_to_generaQR"
            app:destination="@id/generaQR"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/aggiungiOrdiniFragment"
        android:name="com.veneto_valley.veneto_valley.AggiungiOrdiniFragment"
        android:label="Aggiungi un ordine"
        tools:layout="@layout/fragment_aggiungi_ordini" />
    <fragment
        android:id="@+id/impostaTavolo"
        android:name="com.veneto_valley.veneto_valley.ImpostaTavolo"
        android:label="Informazioni aggiuntive"
        tools:layout="@layout/fragment_imposta_tavolo">
        <action
            android:id="@+id/action_impostaTavolo_to_listaPiattiFragment"
            app:destination="@id/listaPiattiFragment"
            app:popUpTo="@id/listaPiattiFragment" />
    </fragment>
    <fragment
        android:id="@+id/nearbyTest"
        android:name="com.veneto_valley.veneto_valley.NearbyTest"
        android:label="fragment_nearby_test"
        tools:layout="@layout/fragment_nearby_test" />
    <fragment
        android:id="@+id/extra"
        android:name="com.veneto_valley.veneto_valley.Extra"
        android:label="activity_extra"
        tools:layout="@layout/activity_extra" />
</navigation>